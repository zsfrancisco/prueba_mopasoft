<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/estilo.css') }}" >
        {% endblock %}
    </head>
    <body>
        {% block body %}

            <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #CCCD00;">
                <div class="collapse navbar-collapse " id="navbarText">
                    <ul class="navbar-nav mr-auto ">
                        <li class="nav-item active">
                            <a id="boton_inicio" v-bind:title="message" class="nav-link" href="{{ path('inicio') }}">Inicio <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">

                        {% if app.user %}

                            <li class="dropdown">
                                <button id="opciones_usuario" v-bind:title="message" class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ app.user.email }}
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href=" {{ path('administracion') }} " >Panel de control</a>
                                    <a class="dropdown-item" href="{{ path('app_logout') }}">Cerrar sesión</a>
                                </div>
                            </li>

                        {% else %}

                            <li class="nav-item " >
                                <a class="nav-link inicioSesion" href="{{ path('app_login') }}">Iniciar sesión</a>
                            </li>

                        {% endif %}

                    </ul>
                </div>
            </nav>

        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('js/jquery-3.3.1.slim.min.js') }}" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
            <script src="{{ asset('js/popper.min.js') }}" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
            <script src="{{ asset('js/bootstrap.min.js') }}" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script> <script src = 'https://cdn.jsdelivr.net/npm/vue/dist/vue.js'> </script> 
            <script src="{{ asset('js/myjs.js') }}" ></script>
        {% endblock %}
    </body>
</html>
